@model List<TMSS.Web.Models.ProcedureViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Procedure Details</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Table In HTML</title>

    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>

</head>
<body>
    <div class="container">

        <table style="width:100%;">
        <thead>
            <tr>
                <th>
                    Procedure Name
                </th>
                <th>
                    Clinic Name
                </th>
                    <th></th>



            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProcedureName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClinicName)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProcedureId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProcedureId">Details</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</body>
</html>