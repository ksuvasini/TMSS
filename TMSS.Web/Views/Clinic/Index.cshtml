@model IEnumerable<TMSS.Domain.Entities.Clinic>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Clinic Details</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Table In HTML</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>

</head>
<body>
    <div>
        <table style="width:100%;">
            <thead>
                <tr>
                    <th>
                        @*                 @Html.DisplayNameFor(model => model.ClinicName)
                        *@
                        Clinic Name
                    </th>
                    <th>
                        @*                 @Html.DisplayNameFor(model => model.ClinicLocation)
                        *@
                        Clinic Location
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClinicName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClinicLocation)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ClinicId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ClinicId">Details</a> |
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>


