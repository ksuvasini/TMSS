@model TMSS.Web.Models.SurgeonViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
<style>
    select:after {
        font-family: FontAwesome;
        content: "\f107";
        padding-left: 4px;
    }
</style>
<h3>Add Surgeon</h3>
<div class="container">

    <div class="row">
        <form id="surgeonForm">
            <div class="row">
                <div class="col-sm-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="SurgeonId" type="hidden" class="form-control" />

                    <div class="form-group">
                        <label asp-for="SurgeonName" class="control-label"></label>
                        <input asp-for="SurgeonName" class="form-control" />
                        <span asp-validation-for="SurgeonName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="DatePPGranted" class="control-label"></label>
                        <input asp-for="DatePPGranted" class="form-control" />
                        <span asp-validation-for="DatePPGranted" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="DateFirstCase" class="control-label"></label>
                        <input asp-for="DateFirstCase" class="form-control" />
                        <span asp-validation-for="DateFirstCase" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="ALSDate" class="control-label"></label>
                        <input asp-for="ALSDate" class="form-control" />
                        <span asp-validation-for="ALSDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="ProcedureId" class="control-label"></label>
                        @* <select asp-for="ProcedureName" class="form-control" /> *@
                        @Html.DropDownListFor(m => m.ProcedureId, Model.Procedures, "--Please select--",new { @class="form-control" })
                        <span asp-validation-for="ProcedureId" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="ClinicId" class="control-label"></label>
                        @Html.DropDownListFor(m => m.ClinicId, Model.Clinics, "--Please select--",new { @class="form-control" })
                        <span asp-validation-for="ClinicId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <input type="button" value="Create" class="btn btn-primary" onclick="SaveSurgeon()" />
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-xs-8">
            <form class="row gx-3 gy-2 align-items-center" id="clinicsearch">
                <div class="col-sm-3">
                    <input id="txtSurgeonName" type="text" placeholder="Surgeon Name..." class="form-control" />
                </div>
                @* <div class="col-sm-3">
                <input id="txtClinicLocation" type="text" placeholder="Location..." class="form-control" />
                </div> *@
                <div class="col-auto">
                    <button id="btnSearch" type="button" class="btn btn-outline-warning">Search</button>
                </div>
                <div class="col-auto">
                    <button id="btnClear" type="button" class="btn btn-outline-warning">Clear</button>
                </div>
                @*  <div class="col-auto" style="margin-left: 19%;">
                <div class="form-group">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                Add New Clinic
                </button>
                </div>
                </div> *@
            </form>
        </div>
    </div>
    <div class="row" style="margin-top: 10px;">

        <table class="table" id="tblSurgeon">
        </table>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
@* <script src="https://unpkg.com/gijgo@1.9.14/js/gijgo.min.js" type="text/javascript"></script> *@
<script src="~/lib/gijgo/modular/js/grid.js"></script>
<script src="~/lib/gijgo/modular/js/grid.min.js"></script>

@* <i class="far fa-edit"></i> <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script> *@
@* @section Scripts{
    <partial name="_ValidationScriptsPartial" />
} *@
<script type="text/javascript">
    var grid, dialog;
    $(document).ready(function () {
        // $.validator.unobtrusive.parse($("#clinicform"));
        GetSurgeons();
        // dialog = $('#staticBackdrop').dialog({
        //     uiLibrary: 'bootstrap5',
        //     iconsLibrary: 'fontawesome',
        //     autoOpen: false,
        //     resizable: false,
        //     modal: true
        // });


    });
    $('#btnSearch').on('click', function () {
        grid.reload({ surgeonName: $('#txtSurgeonName').val() });
    });
    $('#btnClear').on('click', function () {
        $('#txtSurgeonName').val('')
        grid.reload({ surgeonName: '' });
    });
    function Edit(e) {
        console.log(e.data);
        $('#SurgeonId').val(e.data.id);
        $('#SurgeonName').val(e.data.record.surgeonName);
        $('#DatePPGranted').val(e.data.record.datePPGranted);
        $('#DateFirstCase').val(e.data.record.dateFirstCase);
        $('#ALSDate').val(e.data.record.aLSDate);
        // $('#DateFirstCase').val(e.data.record.dateFirstCase);
        // dialog.open('Edit Player');
        $('#staticBackdrop').modal('show');
    }

    function GetSurgeons() {
        grid = $('#tblSurgeon').grid({
            primaryKey: 'ID',
            dataSource: '/Surgeon/Get',
            uiLibrary: 'bootstrap',
            columns: [
                { field: 'surgeonName', title: 'Surgeon Name', sortable: true },
                { field: 'DatePPGranted', title: 'PP Granted', sortable: true },
                { field: 'DateFirstCase', title: 'First Case', sortable: true },
                { field: 'ALSDate', title: 'ALS Date', sortable: true },
                // { field: 'DatePPGranted', title: 'PP Granted', sortable: true },
                { field: 'SurgeonId', hidden: true },
                { title: '', field: 'Edit', width: 34, type: 'icon', icon: 'far fa-edit', tooltip: 'Edit', events: { 'click': Edit } },
                // { title: '', field: 'Delete', width: 34, type: 'icon', icon: 'glyphicon-remove', tooltip: 'Delete', events: { 'click': Delete } }
            ],
            pager: { limit: 5, sizes: [2, 5, 10, 20] }
        });
    }

    function SaveSurgeon() {
        // var selected = $("input[type='radio'][name='Gender']:checked");
        if (!$('#surgeonForm').valid()) {
            return false;
        }
        let surgeonViewModel = {
            SurgeonId: $('#SurgeonId').val(),
            SurgeonName: $('#SurgeonName').val(),
            DatePPGranted: $('#DatePPGranted').val(),
            DateFirstCase: $("#DateFirstCase").val(),
            ALSDate: $("#ALSDate").val(),
            ProcedureId: $("#ProcedureId").val(),
            ClinicId: $("#ClinicId").val()
            //  isRegular: $("#IsRegular").is(":checked")
            //  gender: selected.length > 0 ? selected.val() : 0,
        }
        console.log(surgeonViewModel);
        $.ajax({
            url: "/Surgeon/Create",
            method: "POST",
            data: { surgeonViewModel: surgeonViewModel },
            success: function (response) {
                dialog.close();
                grid.reload();
                //  GetClinics();
            },
            error: function (request, status, error) {
                alert(request.responseText);
            }
        });


    }

</script>
