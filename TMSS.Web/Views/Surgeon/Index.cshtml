<script type="text/javascript">
    var grid, dialog;
    $(document).ready(function () {
        // $.validator.unobtrusive.parse($("#clinicform"));
        GetSurgeons();
        // dialog = $('#staticBackdrop').dialog({
        //     uiLibrary: 'bootstrap5',
        //     iconsLibrary: 'fontawesome',
        //     autoOpen: false,
        //     resizable: false,
        //     modal: true
        // });


    });
    $('#btnSearch').on('click', function () {
        grid.reload({ surgeonName: $('#txtSurgeonName').val() });
    });
    $('#btnClear').on('click', function () {
        $('#txtSurgeonName').val('')
        grid.reload({ surgeonName: '' });
    });
    function Edit(e) {
        console.log(e.data);
        $('#SurgeonId').val(e.data.id);
        $('#SurgeonName').val(e.data.record.surgeonName);
        $('#DatePPGranted').val(e.data.record.datePPGranted);
        $('#DateFirstCase').val(e.data.record.dateFirstCase);
        $('#ALSDate').val(e.data.record.aLSDate);
        // $('#DateFirstCase').val(e.data.record.dateFirstCase);
        // dialog.open('Edit Player');
        $('#staticBackdrop').modal('show');
    }

    function GetSurgeons() {
        grid = $('#tblSurgeon').grid({
            primaryKey: 'ID',
            dataSource: '/Surgeon/Get',
            uiLibrary: 'bootstrap',
            columns: [
                { field: 'surgeonName', title: 'Surgeon Name', sortable: true },
                { field: 'DatePPGranted', title: 'PP Granted', sortable: true },
                { field: 'DateFirstCase', title: 'First Case', sortable: true },
                { field: 'ALSDate', title: 'ALS Date', sortable: true },
                // { field: 'DatePPGranted', title: 'PP Granted', sortable: true },
                { field: 'SurgeonId', hidden: true },
                { title: '', field: 'Edit', width: 34, type: 'icon', icon: 'far fa-edit', tooltip: 'Edit', events: { 'click': Edit } },
                // { title: '', field: 'Delete', width: 34, type: 'icon', icon: 'glyphicon-remove', tooltip: 'Delete', events: { 'click': Delete } }
            ],
            pager: { limit: 5, sizes: [2, 5, 10, 20] }
        });
    }

    function SaveSurgeon() {
        // var selected = $("input[type='radio'][name='Gender']:checked");
        if (!$('#surgeonForm').valid()) {
            return false;
        }
        let surgeonViewModel = {
            SurgeonId: $('#SurgeonId').val(),
            SurgeonName: $('#SurgeonName').val(),
            DatePPGranted: $('#DatePPGranted').val(),
            DateFirstCase: $("#DateFirstCase").val(),
            ALSDate: $("#ALSDate").val(),
            ProcedureId: $("#ProcedureId").val(),
            ClinicId: $("#ClinicId").val()
            //  isRegular: $("#IsRegular").is(":checked")
            //  gender: selected.length > 0 ? selected.val() : 0,
        }
        console.log(surgeonViewModel);
        $.ajax({
            url: "/Surgeon/Create",
            method: "POST",
            data: { surgeonViewModel: surgeonViewModel },
            success: function (response) {
                dialog.close();
                grid.reload();
                //  GetClinics();
            },
            error: function (request, status, error) {
                alert(request.responseText);
            }
        });


    }

</script>
